{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node"
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "public" },
    { "source": "/api/(.*)", "destination": "index.js" },
    { "source": "/markdown/(.*)", "destination": "index.js" },
    { "source": "/uploads/(.*)", "destination": "index.js" }
  ]
}
